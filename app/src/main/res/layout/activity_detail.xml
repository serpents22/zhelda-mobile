    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/detailname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salone"
            android:textSize="27dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/deatilEditBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/systemBorder"
            android:text="Edit"/>

        <Button
            android:id="@+id/detailmemu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/systemBorder"
            android:background="@drawable/ic_menu_icon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailminus"
            android:layout_marginTop="140dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/minusimage"/>

        <LinearLayout
            android:layout_weight="1"
            android:background="@color/systemBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/detailTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â° C"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/detailplus"
            android:layout_marginTop="140dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plusimage"/>


    </LinearLayout>

