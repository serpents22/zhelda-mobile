<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edittextbackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/indiviname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="3dp"
            android:text="Salone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indiviNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/thermometer"/>

            <TextView
                android:id="@+id/indivithermber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.3"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â°C"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/individevice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@drawable/fanimg"/>

            <ImageView
                android:id="@+id/indivimethod"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/clockimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/indiviItemBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="gestisci"
                android:backgroundTint="@color/systemBorder"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>